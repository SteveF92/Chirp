@model Chirp.ViewModels.ChirpUserViewModel
@{
    ViewBag.Title = $"{Model.UserName} - User Page";
}

<script>
    var pageUserName = "@Model.UserName";
</script>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/signalr/jquery.signalR.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/user/app-user.js"></script>
    <script src="~/js/user/userController.js"></script>
    <script src="~/js/directives/chirpControls.js"></script>

}

<div class="row" ng-app="app-user">
    <div class="col-md-12" ng-controller="userController as vm">
        <h1 ng-bind-template="User: {{vm.user.userName}}"/>
        <h5 ng-bind-template="Email: {{vm.user.email}}"/>

        <div class="clearfix">
            <div ng-show="vm.isBusy" class="text-center"><i class="fa fa-refresh fa-spin"></i> Loading...</div>
        </div>

        <h3>Chirps</h3>
        <div id="post-stream" class="container-fluid" ng-cloak>
            <div class='post' ng-repeat="chirpPost in vm.chirpPosts | orderBy:'created_at':true" ng-class-odd="'odd'" ng-class-even="'even'">
                <chirp-post-item chirp-post="chirpPost"></chirp-post-item>
            </div>
        </div>
    </div>
</div>

        


