<!DOCTYPE html>
<html>
<head>
    <title>Chirp - @ViewBag.Title</title>
    <base href="/">
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-profile">
                <img class="profilepicture" src="~/img/prof.jpg" alt="Profile Picture" />
                <a href="~/app/user/@User.Identity.Name">
                    @User.Identity.Name
                </a>
                <a asp-controller="App" asp-action="MyAccount">
                    <i class="fa fa-cog"></i>
                </a>
                <form class="logout-form" action="session/Signout" method="post">
                    <button type="submit" class="btn btn-sm btn-info">Logout</button>
                </form>
            </div>
        }
        
        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
        
    </div>

    <div id="wrapper" class="container-fluid">
        <div id="main">
                @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>