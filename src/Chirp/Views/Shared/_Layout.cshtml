<!DOCTYPE html>
<html>
<head>
    <title>Chirp - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img class="profilepicture" src="~/img/prof.jpg" alt="Profile Picture" />
        <span>Chase Huxley</span>
        <ul class="nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                @RenderBody()
            </div>
            <div id="footer">
                <p> &copy; 2015 Steve Fallon</p>
            </div>
        </div>
    </div>
</body>
</html>