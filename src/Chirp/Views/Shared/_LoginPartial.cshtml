@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Session" asp-action="Signout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <img class="profilepicture" src="~/img/prof.jpg" alt="Profile Picture" />
            </li>
            <li>
                <a href="/user/@User.Identity.Name">
                    @User.Identity.Name
                </a>
            </li>
            <li>
                <a asp-controller="App" asp-action="MyAccount">
                    <i class="fa fa-cog fa-lg"></i>
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Auth" asp-action="Signup">Register</a></li>
        <li><a asp-controller="Auth" asp-action="Login">Log in</a></li>
    </ul>
}
